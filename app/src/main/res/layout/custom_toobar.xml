<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".motorizado.DeliveryOrderDetail">

    <RelativeLayout
        android:id="@+id/rel_fourth"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#000000">

        <RelativeLayout
            android:id="@+id/rela_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/divider1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:src="@drawable/btn_call"
                    android:color="#ffffff"/>

                <Button
                    android:id="@+id/btn_call"
                    style="@style/Delivery_button"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:gravity="start|center_vertical"
                    android:text="@string/txt_call_customer"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    tools:ignore="SpUsage" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/divider1"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@color/white" />

        <RelativeLayout
            android:id="@+id/rela_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/divider1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:src="@drawable/btn_map" />

                <Button
                    android:id="@+id/btn_map"
                    style="@style/Delivery_button"
                    android:layout_width="wrap_content"
                    android:text="Mostrar Recorrido"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    tools:ignore="SpUsage" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>